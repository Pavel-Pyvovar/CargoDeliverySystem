<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <resource name="jdbc/DeliverySystem"
              auth="Container"
              description="DB Connection"
              username="root"
              password="root"
              type="javax.sql.DataSource"
              maxActive="100"
              maxIdle="30"
              maxWait="10000"
              driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/DeliverySystem?autoReconnect=true">
    </resource>

    <ResourceLink name="DeliverySystem"
                  global="jdbc/DeliverySystem"
                  type="javax.sql.DataSource"
    />
</Context>
